extends ../layout

block content
	div(class='row')
		div(class='col-md-6')
			table(class='table table-condensed')
				thead
					tr
						th Id
						th Client
						th Name
						th Contact
						th Tech Lead
						th SBM Project #
						th Size
						th
							span(class='sr-only') Edit
						//th
						//	span(class='sr-only') Delete
				tbody
					each project in projects
						tr
							td #{project.id}
							td #{project.client}
							td #{project.name}
							td #{project.contact}
							td #{project.techLead}
							td #{project.sbm}
							td #{project.size}
							td
								a(href='#')
									span(class='glyphicon glyphicon-pencil', aria-hidden='true')
									span(class='sr-only') Edit
							//th
							//	span(class='sr-only') Delete

				tfoot
					tr
						th(colspan='8')
							ul(class='list-unstyled list-inline')
								li 
									a(href='#') Add Project