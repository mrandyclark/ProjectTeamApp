extends ../layout

block content
	div(class='row')
		div(class='col-md-12') 
			h2(class='h3 pull-left') Current Schedule
		
	div(class='row')
		div(class='col-md-12')
			div(class='btn-group')
				button(class='btn btn-default dropdown-toggle', type='button', data-toggle='dropdown', aria-expanded='false')
					| View 
					span.caret

				ul.dropdown-menu(role='menu')
					li
						a(href='#') Rollup Schedule
					li(class='divider')
					each member in members
						li
							a(href='#') #{member.name}

	div(class='row')
		div(class='col-md-12')
			div(id='schedule')
				table(class='table table-condensed')
					thead
						tr
							th
								span(class='sr-only') Team Member
							each date in dates
								th(class='text-center') #{date}
					tbody
						each member in members
							tr
								td(class='member-name') #{member.name}
								each date in dates
									// if > 98, red
									// if 90-98, yellow
									// otherwise, green
									if false
										td(class='warning text-center') --
									else if true
										td(class='danger text-center') --
									else 
										td(class='success text-center') --

