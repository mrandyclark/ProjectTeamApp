extends ../layout

block content
	div(class='row')
		div(class='col-md-6') 
			h2(class='h3') Code Review Settings

	div(class='row')
		div(class='col-md-6') 
			h3(class='h4') Can't Present 
				small (presented last week or on vacation)
			table(class='table table-condensed')
				thead
					tr
						th Member
						th
							span(class='sr-only') Remove
				tbody
					each member in cantPresent
						tr
							td #{member.name}
							td Remove
				tfoot
					tr
						th(colspan='2')
							ul(class='list-unstyled list-inline')
								li 
									a(href='#') Add Member

	div(class='row')
		div(class='col-md-6') 
			h3(class='h4') Rooms
			table(class='table table-condensed')
				thead
					tr
						th Room Name
						th
							span(class='sr-only') Remove
				tbody
					each room in rooms
						tr
							td #{room.name}
							td Remove
				tfoot
					tr
						th(colspan='2')
							ul(class='list-unstyled list-inline')
								li 
									a(href='#') Add Room

			

block footer
	div(class='row')
		div(class='col-md-12')
			ul(class='list-unstyled list-inline')
				li
					a(href='/code-reviews') Code Reviews