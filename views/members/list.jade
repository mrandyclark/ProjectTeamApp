extends ../layout

block content
	div(class='row')
		div(class='col-md-6')
			table(class='table table-condensed')
				thead
					tr
						th Id
						th Name
						th
							span(class='sr-only') Edit
						th
							span(class='sr-only') Delete
				tbody
					each member in members
						tr
							td #{member.id}
							td #{member.name}
							td 
								a(href="/member/#{member.id}") edit
							td delete
