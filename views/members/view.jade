extends ../layout

block content
	div(class='row')
		div(class='col-md-12') 
			h2(class='h3') #{member.name}

	div(class='row')
		div(class='col-md-12')
			ul
				if position != null
					li #{position.name}
				
				if reportsTo != null
					li Reports to #{reportsTo.name}
				
	div(class='row footer-menu')
		div(class='col-md-12')
			a(href='/members') Member List