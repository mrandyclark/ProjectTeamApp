extends ../layout

block scripts
	script(type='text/javascript', src='/javascripts/page-managers/clients/list.js')

	script(type='text/javascript').
		$(document).ready(function() {
			var pageManager = new PageManager();
			pageManager.init();
		});

block content
	div(class='row')
		div(class='col-md-8')
			table(class='table table-condensed')
				thead
					tr
						//- th Id
						th Name
						//- th
						//- 	span(class='sr-only') Edit
						//- th
						//-	span(class='sr-only') Delete
				tbody
					each client in clients
						tr
							// td #{client._id}
							td #{client.name}
