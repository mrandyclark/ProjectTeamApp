							//- 	a(href="/client/#{client._id}") 
							//- 		span(class='glyphicon glyphicon-pencil', aria-hidden='true')
							//- 		span(class='sr-only') Edit
									
							// td Delete
		div(class='col-md-4')
			h2(class='h4') Add New Client
			form(id='client-form', class='form-horizontal', role='form')
				div(class='alert', role='alert', style='display: none')
				div(class='form-group')
					label(for='client-name', class='control-label col-sm-4') Name
					div(class='col-sm-8')
						input(id='client-name', class='form-control', placeholder='Name')
				div(class='form-group')
					div(class='col-sm-12')
						button(class='btn btn-primary pull-right', type='submit') Create